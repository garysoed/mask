{
  "compilerOptions": {
    "alwaysStrict": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2020.string"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "out",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "es6"
  },
  "include": [
    "demo/**/*.ts",
    "src/**/*.test.ts",
    "typings/*.d.ts",
  ]
}
